	display: -webkit-flex;
	display: flex;
	color: #999999;
	font-size: 24rpx;
}
.mine image{
	margin-right: 18rpx;
}
.mine view{
	padding-top: 25rpx;
}
.read{
	width: 105rpx;
	height: 26rpx;
	background: #D4E5F8;
	border-radius: 1rpx;
