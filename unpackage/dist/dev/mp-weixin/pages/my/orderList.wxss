
page{
	background: #F4F7F7;
	padding-top: 31rpx;
}
.order{
	display: flex;
	background: #fff;
	justify-content: space-between;
	margin-top: 20rpx;
	box-sizing: border-box;
}
.topflex{
	margin: 20rpx 0 0 22rpx;
	box-sizing: border-box;
}
.topflex view:nth-child(1){
	font-size: 38rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #333333;
}
.topflex view:nth-child(2){
	font-size: 24rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	margin-top: 7rpx;
	margin-bottom: 21rpx;
}
.order image{
	width: 66rpx;
	height: 66rpx;
	margin: 35rpx 21rpx 0 0;
}

