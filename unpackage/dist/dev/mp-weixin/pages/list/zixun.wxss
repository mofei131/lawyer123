
.head{
	width: 750rpx;
	height: 176rpx;
	background: #40A9FF;
	padding-top: 80rpx;
	box-sizing: border-box;
}
.search{
	width: 500rpx;
	height: 44rpx;
	background: rgb(255,255,255,.34);
	border-radius: 32rpx;
	display: flex;
	margin-left: 15rpx;
}
.search image{
	width: 26rpx;
	height: 26rpx;
	margin: 9rpx 0 0 16rpx;
}
.search input{
	margin-left: 10rpx;
	color: #fff;
	width: 400rpx;
}
.lawyeritemtopleft{
	width: 148rpx;
}
.lawyeritemtopright{
	width: 546rpx;
	margin-left: 16rpx;
	position: relative;
}
.lawyeritemtopleft image{
	width: 125rpx;
	height: 125rpx;
	border-radius: 77rpx;
	margin-left: 23rpx;
}
.lawyeritemtop{
	display: flex;
}
.name{
	color: #333333;
	font-size: 28rpx;
	margin-bottom: 11rpx;
}
.seat{
	display: flex;
	color: #666;
	font-size: 24rpx;
	margin-bottom: 13rpx;
}
.field{
	display: flex;
	margin-bottom: 13rpx;
}
.label{
	width: 50rpx;
	height: 20rpx;
	background: #26CD93;
	border-radius: 2rpx;
	font-size: 14rpx;
	color: #fff;
	line-height: 22rpx;
	margin-right: 6rpx;
	text-align: center;
}
.gree{
	background: #26CD93;
}
.blue{
	background: #5F91F6;
}
.pink{
	background: #ED538A;
}
.purple{
	background: #6765FF;
}
.yellow{
	background: #E1B12F;
}
.other{
	display: flex;
	justify-content: space-between;
	color: #999999;
	font-size: 20rpx;
}
.other text{
	color: #FF4D4F;
}
.lawyeritemtop{
	padding: 24rpx 0 4rpx 0;
	border-bottom: 1rpx solid #ddd;
}
.lawyerlist{
	width: 710rpx;
	margin: auto;
}
.unit{
	margin-left: 10rpx;
}
.lawyeritembottom,.zixun_price{
	display: flex;
	justify-content: space-around;
}
.lawyeritembottom{
	width: 710rpx;
	margin: auto;
	margin-top: 16rpx;
}
.zixun_price{
	width: 560rpx;
}
.zixun_price view{
	width: 174rpx;
	height: 40rpx;
	border-radius: 4rpx;
	border: 1rpx solid #40A9FF;
}
.lawyeritembottom view{
	color: #40A9FF;
	font-size: 24rpx;
	text-align: center;
	/* line-height: 24px; */
}
.lawyeritembottom text{
	color: #FF4D4F;
}
.zixun_more{
	width: 120rpx;
	height: 40rpx;
	border-radius: 4rpx;
	border: 1rpx solid #40A9FF;
}

